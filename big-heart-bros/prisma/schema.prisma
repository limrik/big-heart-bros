// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GenderType {
  Male
  Female
}

enum ResidentialStatusType {
  SingaporeCitizen
  SingaporePR
}

enum CommitmentLevelType {
  AdHoc
  Low
  Medium
  High
}

enum Skills {
  OnGroundVolunteering
  Photography
  Videography
  ArtsAndCraft
  PerformingSkills
  Sports
  Teaching
  Leadership
  DigitalMarketing
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email String @unique
  phoneNumber String
  gender GenderType
  occupation String?
  dob DateTime
  canDrive Boolean
  ownVehicle Boolean
  commitmentLevel CommitmentLevelType
  skills Skills[]
  residentialStatus ResidentialStatusType
}

enum EventType {
  Volunteering
  Training
  Workshop
}

model Event {
  id Int @id @default(autoincrement())
  name String
  description String
  type EventType
  startDate DateTime
  endDate DateTime
  skills Skills[]
  createdAt DateTime @default(now())
}
