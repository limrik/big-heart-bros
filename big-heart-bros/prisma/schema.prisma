generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                   @id @default(autoincrement())
  name              String
  email             String                @unique
  phoneNumber       String
  gender            GenderType
  occupation        String?
  dob               DateTime
  canDrive          Boolean
  ownVehicle        Boolean
  commitmentLevel   CommitmentLevelType
  skills            Skills[]
  residentialStatus ResidentialStatusType
}

model Event {
  id                   Int       @id @default(autoincrement())
  name                 String
  description          String
  capacity             Int
  type                 EventType
  registrationDeadline DateTime
  startDate            DateTime
  endDate              DateTime
  skills               Skills[]
  createdAt            DateTime  @default(now())
}

enum GenderType {
  Male
  Female
}

enum ResidentialStatusType {
  SingaporeCitizen
  SingaporePR
}

enum CommitmentLevelType {
  AdHoc
  Low
  Medium
  High
}

enum Skills {
  OnGroundVolunteering
  Photography
  Videography
  ArtsAndCraft
  PerformingSkills
  Sports
  Teaching
  Leadership
  DigitalMarketing
}

enum EventType {
  Volunteering
  Training
  Workshop
}
