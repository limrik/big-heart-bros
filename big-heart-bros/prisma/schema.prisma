generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String                @id @default(uuid())
  name              String
  email             String                @unique
  phoneNumber       String
  gender            GenderType
  occupation        String?
  dob               DateTime
  canDrive          Boolean
  ownVehicle        Boolean
  commitmentLevel   CommitmentLevelType
  skills            Skills[]
  residentialStatus ResidentialStatusType
  events UsersInEvents[]
}

model UsersInEvents {
  user User @relation(fields: [userId], references: [id])
  userId String
  event Event @relation(fields: [eventId], references: [id])
  eventId String
  @@id([userId, eventId])
}

model Organisation {
  id          String  @id @default(uuid())
  name        String
  email       String
  phoneNumber String
  events      Event[]
}

model Event {
  id                   String       @id @default(uuid())
  name                 String
  description          String
  capacity             Int
  type                 EventType
  registrationDeadline DateTime
  startDate            DateTime
  endDate              DateTime
  skills               Skills[]
  createdAt            DateTime     @default(now())
  poster               Organisation @relation(fields: [posterId], references: [id])
  posterId             String
  users UsersInEvents[]
  approved Boolean @default(false)
}

enum GenderType {
  Male
  Female
}

enum ResidentialStatusType {
  SingaporeCitizen
  SingaporePR
}

enum CommitmentLevelType {
  AdHoc
  Low
  Medium
  High
}

enum Skills {
  OnGroundVolunteering
  Photography
  Videography
  ArtsAndCraft
  PerformingSkills
  Sports
  Teaching
  Leadership
  DigitalMarketing
}

enum EventType {
  Volunteering
  Training
  Workshop
}
